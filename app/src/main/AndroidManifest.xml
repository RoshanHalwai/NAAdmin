<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kirtanlabs.nammaapartmentssocietyservices">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NammaApartmentsTheme">

        <!-- Ignore this activity for now -->
        <activity android:name=".MainActivity" />

        <!-- Namma Apartments Plumber Services Screen -->
        <activity
            android:name=".home.NammaApartmentsPlumberServices"
            android:screenOrientation="portrait" />
        <activity
            android:name=".endservice.OTP"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <service android:name=".pushnotifications.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".pushnotifications.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!-- Login Screen -->
        <activity
            android:name=".login.SignIn"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Screen -->
        <activity
            android:name=".admin.Register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <receiver android:name=".nammaapartmentssocietyserviceshome.Button_listener">
            <intent-filter>
                <action android:name="accept_button_clicked" />
                <action android:name="reject_button_clicked" />
            </intent-filter>
        </receiver>
    </application>

</manifest>