<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/textComplainDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="7th September, 2018"
            android:textColor="@color/nmBlack"
            android:textSize="16sp" />

        <View
            android:id="@+id/dateLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/textComplainDate"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/nmBlack" />

        <TextView
            android:id="@+id/textOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateLine"
            android:layout_margin="10dp"
            android:text="Ashish Jha, Bolivia, B-1001"
            android:textColor="@color/nmBlack"
            android:textSize="14sp" />

        <View
            android:id="@+id/userNameLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/textOwnerName"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/nmBlack" />

        <TextView
            android:id="@+id/textComplainCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNameLine"
            android:layout_margin="10dp"
            android:text="Society Services"
            android:textColor="@color/nmBlack"
            android:textSize="@dimen/text_view_default_size" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/textComplainCategory"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/nmBlack" />

        <TextView
            android:id="@+id/textComplainDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_margin="10dp"
            android:text="I am unable to invite a Family Member from my app. Please help me with the process."
            android:textColor="@color/nmBlack"
            android:textSize="14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>