<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.timeline.ServingFragment">

    <RelativeLayout
        android:id="@+id/layoutAwaitingResponse"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/animationWaitingToLoadData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:indicatorColor="@color/nmBlack"
            app:indicatorName="BallSpinFadeLoaderIndicator" />

        <TextView
            android:id="@+id/textAwaitingResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/animationWaitingToLoadData"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/awaiting_customer_requirement"
            android:textColor="@color/nmBlack"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutAcceptedUserDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/layout_resident_details" />

        <Button
            android:id="@+id/buttonEndService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/nmBlack"
            android:text="@string/end_service"
            android:textAllCaps="true"
            android:textColor="@color/nmLightYellow"
            android:textSize="@dimen/button_default_size" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutUnAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageSocietyService"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:contentDescription="@string/feature_unavailable_image_desc"
            android:src="@drawable/feature_unavailable" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageSocietyService"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/unavailable_layout_message"
            android:textColor="@color/nmBlack"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>